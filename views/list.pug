html
  head
    include _head
  body
    include _header
    div.uk-section
      div.uk-container.uk-container-large
        if query
          h2= `検索結果: ${query}`
        else
          h2 譜面一覧
        table.uk-table.uk-table-divider.uk-table-hover
          thead
            tr
              th 曲名
              th アーティスト
              th デザイナー
              th 難易度
              th レベル
              th 投稿者
          tfoot
            tr
              th 曲名
              th アーティスト
              th デザイナー
              th 難易度
              th レベル
              th 投稿者
          tbody
            each score in scores
              tr
                td
                  a(href=`/score/${score.score_id}`)= score.meta.TITLE
                td= score.meta.ARTIST
                td= score.meta.DESIGNER
                td(style=`background: ${score.meta.DIFFICULTY.BACKGROUND};color: ${score.meta.DIFFICULTY.COLOR};font-weight: 400;`)= score.meta.DIFFICULTY.TEXT
                td= score.meta.DIFFICULTY.LEVEL === 4 ? score.meta.DIFFICULTY.MARK || '' : score.meta.PLAYLEVEL.TEXT || ''
                td
                  a(href=`/user/${score.user.id}`)= score.user.username
    include _footer
