header
  nav(uk-navbar).uk-navbar-container.uk-container.uk-container-expand
    div.uk-navbar-left
      a(href="/").uk-navbar-item.uk-logo
        include /svgs/ssshare.svg
      ul.uk-navbar-nav
        li
          a(href="/") <span uk-icon="icon: home"></span>&nbsp;Home
        li
          a(href="/list") <span uk-icon="icon: list"></span>&nbsp;List
        if user!=null
          li
            a(uk-toggle="target: #upload") <span uk-icon="icon: upload"></span>&nbsp;Upload
    div.uk-navbar-right
      ul.uk-navbar-nav
        li
          div.uk-navbar-item
            form(action="javascript:void(0)")
              input(type="text", placeholder="Search...").uk-input.uk-form-width-small
              button.uk-button.uk-button-default Search
        if user==null
          li
            a(href="/account/login") <span uk-icon="icon: user"></span>&nbsp;Login
        else
          li
            a(href="#")
              img(src=`/account/icon/${user._id}`, style="width: 20px;")
              | &nbsp;#{user.username}
            div.uk-navbar-dropdown
              ul.uk-nav.uk-navbar-dropdown-nav
                li
                  a(href=`/user/${user.id}`) <span uk-icon="icon: user"></span>&nbsp;My Page
                li
                  a(href="/account/logout") <span uk-icon="icon: sign-out"></span>&nbsp;Logout
  div(uk-modal)#upload2.uk-modal-container
    div.uk-modal-dialog.uk-modal-body
      h2 Upload
      div.js-upload.uk-placeholder.uk-text-center
        span(uk-icon="icon: cloud-upload")
        span.uk-text-middle Attach binaries by dropping them here or
        div(uk-form-custom)
          input(type="file" multiple)
          span.uk-link selecting one
      p.uk-text-right
        button(type="button").uk-button.uk-button-default.uk-modal-close Cancel
        button(type="button").uk-button.uk-button-primary Save
  
  div(uk-modal)#upload.uk-modal-container
    div.uk-modal-dialog.uk-modal-body
      h2 Upload
      div(uk-grid).uk-child-width-expand
        div
          textarea#sus_area(rows="22", style="width: 100%;")
        div
          form(method="post", action="/account/register").uk-form-horizontal
            div.uk-margin
              label.uk-form-label SONG NAME
              div.uk-inline
                span(uk-icon="icon: bell").uk-form-icon
                input#sus_songname().uk-input
            div.uk-margin
              label.uk-form-label ARTIST
              div.uk-inline
                span(uk-icon="icon: users").uk-form-icon
                input#sus_artist().uk-input
            div.uk-margin
              label.uk-form-label DESIGNER
              div.uk-inline
                span(uk-icon="icon: user").uk-form-icon
                input#sus_designer().uk-input
            div.uk-margin
              label.uk-form-label DIFFICULTY
              div.uk-inline
                span(uk-icon="icon: thumbnails").uk-form-icon
                input#sus_difficulty().uk-input
            div.uk-margin
              label.uk-form-label PLAY LEVEL
              div.uk-inline
                span(uk-icon="icon: bolt").uk-form-icon
                input#sus_playlevel().uk-input
            div.uk-margin
              label.uk-form-label BASEBPM
              div.uk-inline
                span(uk-icon="icon: settings").uk-form-icon
                input#sus_basebpm().uk-input
      p.uk-text-right
        button(type="button").uk-button.uk-button-default.uk-modal-close Cancel
        button(type="button").uk-button.uk-button-primary Save
